  <TextView
      android:id="@+id/name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Name"
      android:layout_below="@id/toolbar2"
      android:layout_marginTop="20dp"
      android:layout_marginHorizontal="30dp"
      android:textColor="@color/black"
      />
  <EditText
      android:id="@+id/uname"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="your name"
      android:textColorHint="@color/material_dynamic_neutral60"
      android:layout_below="@id/name"
      android:layout_marginHorizontal="30dp"
      android:textColor="@color/black"
      />

  <TextView
      android:id="@+id/contact"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Contact number"
      android:layout_below="@id/uname"
      android:layout_marginTop="20dp"
      android:layout_marginHorizontal="30dp"
      android:textColor="@color/black"

      />


  <EditText
      android:id="@+id/ucontact"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Contact number"
      android:textColorHint="@color/material_dynamic_neutral60"
      android:layout_below="@id/contact"
      android:layout_marginHorizontal="30dp"
      android:ems="10"
      android:textColor="@color/black"
      android:inputType="phone"/>
  <TextView
      android:id="@+id/toa"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/ucontact"
      android:text="type of accident"
      android:layout_marginTop="20dp"
      android:layout_marginHorizontal="30dp"
      android:textColor="@color/black"
      />
  <RadioGroup
      android:id="@+id/utoa"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/toa"
      android:layout_marginHorizontal="30dp"
      >
    <RadioButton
        android:id="@+id/aot_ra"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:text="Road Accident"/>
    <RadioButton
        android:id="@+id/aot_fa"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Fire Accident"
        android:textColor="@color/black"
        />
    <RadioButton
        android:id="@+id/others"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Others"
        android:textColor="@color/black"
        />
  </RadioGroup>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Notify"
      android:backgroundTint="@color/red"
      android:layout_centerInParent="true"
      android:layout_below="@+id/utoa"
      android:textColor="@color/white"/>




</RelativeLayout>